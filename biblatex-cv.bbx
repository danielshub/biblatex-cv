\DeclareFieldFormat[abstract]{volume}{#1}
\xpatchbibdriver{abstract}{\usebibmacro{doi+eprint+url}}{%
	\usebibmacro{type+presenter}%
	\newunit\newblock%
	\usebibmacro{doi+eprint+url}%
}{}{}

