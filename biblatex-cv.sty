% Emphasize a name throughout the CV. We need to patch the name formats and not the underlying bib macros since the bib macros might only get initials and not the full name. Ideally this would work with multiple names.
\newcommand{\cv@blx@highlightname@format}{\textbf}
\newcommand{\cv@blx@highlightname}{}
\newcommand{\cv@blx@highlightnamehash}{XXXXXXXXXX}
\newcommand{\highlightname}[5]{%
	\renewcommand{\cv@blx@highlightname}{#1|#2|#3|#4}%
	\renewcommand{\cv@blx@highlightnamehash}{#5}%
}

\ExplSyntaxOn
	\NewDocumentCommand{\cv@blx@deleteName}{mm}{% Hash, Authors
		\tl_set:Nn\l_tmpa_tl{#2}%
		\str_if_in:nnTF{#2}{hash=#1}{%
			\numdef\NewCount{\NewCount-1}%
			\regex_replace_all:nnN{\cB\{\cB\{.*?hash=#1.*?\cE\}\cE\}\cE\}}{}\l_tmpa_tl%
			\edef\NewValue{\l_tmpa_tl}%
			\blx@bbl@addfield{presenterdeleted}{1}%
		}{}%
	}
\ExplSyntaxOff

\DeclareNameInputHandler{presenter}{%
	\expandafter\expandafter\expandafter\cv@blx@deleteName%
	\expandafter\expandafter\expandafter{%
		\expandafter\cv@blx@highlightnamehash\expandafter%
	}\expandafter{%
		\NewValue%
	}%
}

\newcommand{\cv@blx@highlightname@patch}{%
	\begingroup% Needs to be ended by an \xapptonameformat
		\def\bibnamedelima{ }%
		\long\edef\@tempa{\namepartfamily|\namepartgiven|\namepartprefix|\namepartsuffix}%
		\ifdefequal{\cv@blx@highlightname}{\@tempa}{%
			\let\mkbibnamegiven=\cv@blx@highlightname@format%
			\let\mkbibnamefamily=\cv@blx@highlightname@format%
			\let\mkbibnameprefix=\cv@blx@highlightname@format%
			\let\mkbibnamesuffix=\cv@blx@highlightname@format%
		}{}%
}
\xpretonameformat{given-family}{\cv@blx@highlightname@patch}{}{}
\xapptonameformat{given-family}{\endgroup}{}{}
